FROM ubuntu:latest
LABEL maintainer="ganeshrejeti1@gmail.com"
LABEL version="1.0"
LABEL description="Dockerfile for a Naviloop Ubuntu-based image"
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    git \
    curl \
    wget \
    build-essential \
    libssl-dev \
    libffi-dev \
    python3-dev \ 
    && rm -rf /var/lib/apt/lists/*  
COPY requirements.txt /tmp/
RUN pip3 install --no-cache-dir -r /tmp/requirements.txt
COPY . /NaviLoop
WORKDIR /NaviLoop
EXPOSE 9012
